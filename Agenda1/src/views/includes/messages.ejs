<% if (errors.length > 0) { %> 

<div class="row">
    <div class="col my-3">
        <div class="alert alert-danger">
            <% errors.forEach(error => { %>
                <%= error %><br>
            <% }); %>
        </div>
    </div>
</div>
<% } %>

<% if (sucess.length > 0) { %> 

    <div class="row">
        <div class="col my-3">
            <div class="alert" style="background-color:#DFF0D8;color:#3C763D;">
                <% sucess.forEach(sucess => { %>
                    <%= sucess %><br>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>